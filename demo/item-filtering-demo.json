{
  "itemFilteringExamples": {
    "basicFiltering": {
      "description": "Basic filtering with pagination and sorting",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 10,
        "sortBy": "createdAt",
        "sortOrder": -1,
        "categoryId": "64f8a1b2c3d4e5f6a7b8c9d0",
        "subcategoryId": "64f8a1b2c3d4e5f6a7b8c9d1"
      }
    },
    
    "priceFiltering": {
      "description": "Filter by price range and discount",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 20,
        "minPrice": 100,
        "maxPrice": 1000,
        "hasDiscount": true,
        "sortBy": "price",
        "sortOrder": 1
      }
    },
    
    "searchWithFilters": {
      "description": "Search items with text and apply filters",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 15,
        "search": "cotton shirt",
        "categoryId": "64f8a1b2c3d4e5f6a7b8c9d0",
        "filters": {
          "brand": ["Nike", "Adidas"],
          "size": ["M", "L", "XL"],
          "color": ["blue", "black"]
        }
      }
    },
    
    "complexFiltering": {
      "description": "Complex filtering with multiple criteria",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 25,
        "sortBy": "price",
        "sortOrder": -1,
        "minPrice": 50,
        "maxPrice": 500,
        "categoryId": "64f8a1b2c3d4e5f6a7b8c9d0",
        "subcategoryId": "64f8a1b2c3d4e5f6a7b8c9d1",
        "hasDiscount": true,
        "filters": {
          "brand": ["Nike", "Adidas", "Puma"],
          "material": ["cotton", "polyester"],
          "size": ["S", "M", "L", "XL"],
          "color": ["blue", "black", "white", "red"],
          "style": ["casual", "sports"],
          "season": ["summer", "winter"],
          "fit": ["regular", "slim", "loose"],
          "pattern": ["solid", "striped", "printed"],
          "sleeve": ["short", "long", "sleeveless"],
          "neckline": ["round", "v-neck", "polo"]
        }
      }
    },
    
    "categorySpecificFiltering": {
      "description": "Filter items within a specific category",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 30,
        "categoryId": "64f8a1b2c3d4e5f6a7b8c9d0",
        "sortBy": "name",
        "sortOrder": 1,
        "filters": {
          "gender": ["men", "women"],
          "age_group": ["adult", "teen"],
          "occasion": ["casual", "formal", "party"]
        }
      }
    },
    
    "stockBasedFiltering": {
      "description": "Filter items based on availability",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 20,
        "filters": {
          "availability": ["in_stock", "low_stock"],
          "brand": ["Nike", "Adidas"]
        }
      }
    },
    
    "trendingFiltering": {
      "description": "Get trending items with filters",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 15,
        "sortBy": "updatedAt",
        "sortOrder": -1,
        "filters": {
          "trending": ["true"],
          "categoryId": "64f8a1b2c3d4e5f6a7b8c9d0"
        }
      }
    },
    
    "noFilters": {
      "description": "Get all items without any filters (initial load)",
      "endpoint": "POST /items/filter",
      "requestBody": {
        "page": 1,
        "limit": 20,
        "sortBy": "createdAt",
        "sortOrder": -1
      }
    }
  },
  
