  "item": [
    {
      "name": "Item Filtering",
      "item": [
        {
          "name": "Get All Items (No Filters)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"page\": 1,\n  \"limit\": 20,\n  \"sortBy\": \"createdAt\",\n  \"sortOrder\": -1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/filter",
              "host": ["{{baseUrl}}"],
              "path": ["items", "filter"]
            },
            "description": "Get all items without any filters (initial page load)"
          }
        },
        {
          "name": "Basic Category Filtering",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"page\": 1,\n  \"limit\": 15,\n  \"categoryId\": \"64f8a1b2c3d4e5f6a7b8c9d0\",\n  \"subcategoryId\": \"64f8a1b2c3d4e5f6a7b8c9d1\",\n  \"sortBy\": \"name\",\n  \"sortOrder\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/filter",
              "host": ["{{baseUrl}}"],
              "path": ["items", "filter"]
            },
            "description": "Filter items by category and subcategory"
          }
        },
