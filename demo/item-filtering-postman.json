            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"page\": 1,\n  \"limit\": 30,\n  \"sortBy\": \"price\",\n  \"sortOrder\": -1,\n  \"minPrice\": 100,\n  \"maxPrice\": 500,\n  \"categoryId\": \"64f8a1b2c3d4e5f6a7b8c9d0\",\n  \"hasDiscount\": true,\n  \"filters\": {\n    \"brand\": [\"Nike\", \"Adidas\", \"Puma\"],\n    \"material\": [\"cotton\", \"polyester\"],\n    \"size\": [\"S\", \"M\", \"L\", \"XL\"],\n    \"color\": [\"blue\", \"black\", \"white\", \"red\"],\n    \"style\": [\"casual\", \"sports\"],\n    \"season\": [\"summer\", \"winter\"],\n    \"fit\": [\"regular\", \"slim\"],\n    \"pattern\": [\"solid\", \"striped\"],\n    \"sleeve\": [\"short\", \"long\"],\n    \"neckline\": [\"round\", \"v-neck\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/filter",
              "host": ["{{baseUrl}}"],
              "path": ["items", "filter"]
            },
            "description": "Complex filtering with multiple criteria and price range"
          }
        },
        {
          "name": "Gender and Age Filtering",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
